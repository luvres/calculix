CFLAGS = -w -O3 -L $(MY_LIB) -I $(MY_INCLUDE) -DARCH="Linux" -DMATRIXSTORAGE -lm -lc -lpthread -ldl
FFLAGS = -w -O3 -fopenmp -m64 $(OPTIONS)
LIBS = 

# Spooles
CFLAGS += -I $(MY_INCLUDE)/spooles -DSPOOLES
LIBS += $(MY_LIB)/spooles.a

# Multithreaded spooles
CFLAGS += -DUSE_MT
LIBS += $(MY_LIB)/spoolesMT.a

# ARPACK
LIBS += $(MY_LIB)/libarpack_linux.a
CFLAGS += -DARPACK

CC=gcc
FC=gfortran

OPTIONS = -w -fno-second-underscore -fcray-pointer -x f77-cpp-input
FPPSTOP=-x none

.SUFFIXES: .o .c .cu
.c.o :
	$(CC) $(CFLAGS) -c $<
.f.o :
	$(FC) $(FFLAGS) -c $<

include Makefile.inc

SCCXMAIN = ccx_2.13.c

# OCCXCU = $(SCCXCU:.cu=.o)
OCCXF = $(SCCXF:.f=.o)
OCCXC = $(SCCXC:.c=.o)
OCCXMAIN = $(SCCXMAIN:.c=.o)

ccx_2.13: $(OCCXMAIN) ccx_2.13.a \
    ./date.pl; $(CC) $(CFLAGS) -c ccx_2.13.c; \
    $(FC) $(FFLAGS) -o $@ $(FPPSTOP) $(OCCXMAIN) ccx_2.13.a \
    -Wl,--start-group \
	$(LIBS) \
    -Wl,--end-group

ccx_2.13.a: $(OCCXCU) $(OCCXF) $(OCCXC)
	ar vr $@ $?
